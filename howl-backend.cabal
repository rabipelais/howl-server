test-suite howl-backend-test
  type:                exitcode-stdio-1.0
  hs-source-dirs:      test
  main-is:             Tests.hs
  build-depends:       base
                     , configurator
                     , howl-backend
                     , fb
                     , cereal
                     , containers
                     , conduit
                     , http-conduit
                     , directory
                     , servant
                     , servant-server
                     , servant-client
                     , lifted-base
                     , data-default
                     , transformers
                     , monad-logger
                     , monad-control
                     , string-conversions
                     , persistent
                     , persistent-template
                     , persistent-sqlite
                     , resourcet
                     , aeson
                     , bytestring
                     , text
                     , time
                     , wai
                     , warp
                     , QuickCheck
                     , tasty
                     , tasty-hspec
                     , tasty-hunit
                     , HUnit
                     , hspec
                     , http-client
                     , http-types
                     , hspec-wai
                     , hspec-wai-json
                     , optparse-generic
  ghc-options:         -fhpc
  default-language:    Haskell2010

test-suite swagger-server-spec
  ghc-options:      -Wall
  type:             exitcode-stdio-1.0
  hs-source-dirs:   test
  main-is:          Spec.hs
  other-modules:
    SwaggerSpec
    Paths_howl_backend
  build-depends:    base
                  , aeson >=0.11.2.0
                  , bytestring
                  , howl-backend
                  , hspec
                  , servant-swagger
                  , QuickCheck
                  , quickcheck-instances
                  , swagger2
                  , lens
  default-language: Haskell2010

source-repository head
  type:     git
  location: https://gitlab.com/smendez/howl-backend
