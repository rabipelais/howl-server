files:
  "/etc/logstash/conf.d/rails.conf":
    content: |
      input {
        file {
            path => "/var/log/nginx/access.log"
            type => "nginx_logs"
         }
      }

      output {
        elasticsearch {
          hosts => 'search-howl-webserver-kj3sjq7uoeropbdhjnhktghlmm.eu-central-1.es.amazonaws.com'
          document_id => "%{request_id}"
          timeout => 15
        }
      }